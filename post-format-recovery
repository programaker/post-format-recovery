#! /bin/bash

# configurations in /etc/profile
sudo cat etc-profile.backup >> /etc/profile

# configurations in /etc/apt/sources.list
sudo cat etc-apt-sources.list.backup >> /etc/apt/sources.list

# configurations in /etc/sysctl.conf
sudo cat etc-sysctl.conf.backup >> /etc/sysctl.conf


# adding keys for:
## ubuntu-tweak
sudo apt-key adv --recv-keys --keyserver keyserver.ubuntu.com FE85409EEAB40ECCB65740816AF0E1940624A220

# update due to the edition of /etc/apt/sources.list
sudo aptitude update


# and the installation begins!
## utils
sudo aptitude install -y ubuntu-tweak gnome-do parcellite checkgmail nautilus-open-terminal nautilus-wallpaper nicotine sound-juicer mp3gain easytag

## messengers
sudo aptitude install -y emesene pidgin amsn

## multimedia
sudo aptitude install -y gstreamer0.10-ffmpeg gstreamer0.10-plugins-ugly gstreamer0.10-plugins-ugly-multiverse gstreamer0.10-plugins-bad gstreamer0.10-plugins-bad-multiverse gstreamer0.10-plugins-good

## compactors
sudo aptitude install -y rar unrar cabextract

## development
sudo aptitude install -y ruby irb ri rubygems ssh git-core sun-java6-jdk sun-java6-plugin


# finally, getting the newest versions
sudo aptitude safe-upgrade
